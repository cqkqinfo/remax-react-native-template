{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "rootDir": "src",
    "baseUrl": "./",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "*": ["./typings/*"]
    },
    "lib": ["es2017", "dom", "esnext.array"]
  },
  "include": ["src/**/*", "typings/**/*"]
}
